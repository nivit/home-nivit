# Install
# x11-fonts/artwiz-aleczapka-en
AutoRelativeResize
BorderWidth 8
#ClientBorderWidth
#DecorateTransients
DontMoveOff
FramePadding 4
IconFont "-adobe-helvetica-bold-r-normal--*-100-*-*-*-*-*-*"
IconManagerDontShow { "guake" "xclock" "wbar" "panel" "Gnome-pie" "tickr" }
IconManagerFont "-*-courier-bold-r-*-*-*-100-*-*-*-*-*-*"
IconManagerGeometry  "236x100-0+0"
IconifyByUnmapping
MenuBorderWidth 4
MenuFont "-adobe-helvetica-bold-r-normal--*-100-*-*-*-*-*-*"
#MaxWindowSize "1264x1024+0-0"
MaxWindowSize "1264x895"
NoGrabServer
NoHighlight { "guake" "wbar" "xclock" "panel" "Gnome-pie" "tickr" }
NoStackMode { "guake" "wbar" "panel" "Gnome-pie" "tickr" }
NoTitle { "guake" "MPlayer" "xclock" "wbar" "VDR" "panel" "Chrome" "Gnome-pie" "tickr" "xfce4-notifyd" }
NoTitleFocus
NoTitleHighlight
ResizeFont "-adobe-helvetica-bold-r-normal--*-120-*-*-*-*-*-*"
RestartPreviousState
SortIconManager
#SqueezeTitle
StartIconified { "Sonata" "ticrk" }
TitleFont "-adobe-helvetica-bold-r-normal--*-100-*-*-*-*-*-*"
# usare xprop per vedere la WM_CLASS dell'applicazione che si
# vuole aggiungere
UsePPosition "On"
WindowRing {"xterm" "emacs" "Chrome" "Eclipse" "filezilla" "Firefox" "GeoGebra" "opera" "MPlayer" "cmus" "display" "Skype" "ninja-ide" "ROX-Filer" "Chrome" "xmix" "gtmixer" }

