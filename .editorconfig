# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4

[*.js]
indent_style = space
indent_size = 2
root = true

[*.html]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.vim]
indent_style = tab
indent_size = 1
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

[*.php]
indent_style = tab
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.yml]
indent_style = space
indent_size = 2
